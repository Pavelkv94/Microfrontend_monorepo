{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "resolveJsonModule": true //чтобы импортировать в webpack.config.ts файл package.json
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
